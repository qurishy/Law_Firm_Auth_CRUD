@model Client

<!-- Header-->
<header class="py-5">
    <div class="container px-5 pb-5">
        <div class="row gx-5 align-items-center">
            <div class="col-xxl-5">
                <!-- Header text content-->
                <div class="text-center text-xxl-start">
                    <div class="badge bg-gradient-primary-to-secondary text-white mb-4">
                        <div class="text-uppercase">Client Profile</div>
                    </div>
                    <div class="fs-3 fw-light text-muted">Welcome back, @Model.User.FirstName</div>
                    <h1 class="display-3 fw-bolder mb-5">
                        <span class="text-gradient d-inline">Justice prevails where judgment is fair.</span>
                    </h1>
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xxl-start mb-3">
                        <a class="btn btn-outline-dark btn-lg px-5 py-3 fs-6 fw-bolder"
                           asp-area="Client_Area"
                           asp-controller="Clients"
                           asp-action="CreateCase">
                            New Case
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-xxl-7">
                <!-- Header profile picture-->
                <div class="d-flex justify-content-center mt-5 mt-xxl-0">
                    <div class="profile bg-gradient-primary-to-secondary">
                        @if (!string.IsNullOrEmpty(Model.User.ProfilePicture))
                        {
                            <img class="profile-img resized-profile-img"
                                 src="@Url.Content($"~{Model.User.ProfilePicture}")"
                                 alt="Profile picture of @Model.User.FirstName @Model.User.LastName" />
                        }
                        else
                        {
                            <div class="profile-img-placeholder d-flex align-items-center justify-content-center">
                                <span class="initials">@Model.User.FirstName[0]@Model.User.LastName[0]</span>
                            </div>
                        }
                    </div>
            </div>
        </div>
    </div>
</header>

<!-- About Section-->
<section class="bg-light py-5">
    <div class="container px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-xxl-8">
                <div class="text-center my-5">
                    <h2 class="display-5 fw-bolder">
                        <span class="text-gradient d-inline">About @Model.User.FirstName</span>
                    </h2>
                    <p class="lead fw-light mb-4">@Model.User.FirstName @Model.User.LastName</p>
                    <div class="text-muted mb-4">
                        <p><strong>Address:</strong> @Model.Address</p>
                        <p><strong>Phone:</strong> @(Model.PhoneNumber ?? "Not provided")</p>
                        <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                        <p><strong>Member Since:</strong> @Model.User.Created.ToString("MMMM yyyy")</p>
                    </div>
                    <div class="d-flex justify-content-center fs-2 gap-4">
                        <!-- Add social links if available -->
                        <a class="text-gradient" href="#!"><i class="bi bi-twitter"></i></a>
                        <a class="text-gradient" href="#!"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .profile-img-placeholder {
        width: 100%;
        height: 100%;
        background-color: #6c757d;
        color: white;
        font-size: 3rem;
        font-weight: bold;
    }

    .initials {
        transform: translateY(15%);
    }
</style>
