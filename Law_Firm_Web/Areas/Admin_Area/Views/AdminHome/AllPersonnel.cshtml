@{
    var personnelWithCaseCounts = ViewData["PersonnelWithCaseCounts"] as IEnumerable<dynamic>;
}

<h1>All Personnel</h1>

<div class="card text-white bg-info mb-auto" style="max-width: auto;">
    <div class="card-header">All Personnel Info</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Department</th>
            <th>Hire Date</th>
            <th>Phone Number</th>
            <th>Assigned Case Count</th>
        </tr>
    </thead>
    <tbody>
        @if (personnelWithCaseCounts != null)
        {
            foreach (var item in personnelWithCaseCounts)
            {
                 
                <tr class="table-success">

                    <td>@item.Personnel.User.FirstName @item.Personnel.User.LastName</td>
                    <td>@item.Personnel.Position</td>
                    <td>@item.Personnel.Department</td>

                    <td>@item.Personnel.HireDate</td>
                    <td>@(item?.Personnel.User.PhoneNumber?? item.Personnel.User.PhoneNumber ?? "N/A")</td>
                    <td>@(item?.AssignedCaseCount ?? 0)</td>
                    <td>
                            <div>
                                <a class="btn btn-danger" asp-area="Admin_Area" asp-controller="AdminHome" asp-action="DeletePersonel" asp-route-id="@item.Personnel.Id">Delete</a>
                            </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>