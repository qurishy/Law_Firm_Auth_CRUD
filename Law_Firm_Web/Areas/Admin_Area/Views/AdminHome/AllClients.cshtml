@model IEnumerable<Client>

<section class="py-5">
    <div class="container px-5">
        <!-- Contact form-->
        <div class="bg-light rounded-4 py-5 px-4 px-md-5">
            <div class="text-center mb-5">
                <div class="feature bg-primary bg-gradient-primary-to-secondary text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
                <h1 class="fw-bolder">All ClientS</h1>
               
            </div>
            
            
            <div class="card text-white bg-warning mb-auto" style="max-width: auto;">
                <div class="card-header">Clients Info</div>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Client Name</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Address</th>
                            <th scope="col">Date of Birth</th>
                            <th scope="col">Number of Cases</th>
                            <th scope="col">Romove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var client in Model)
                        {

                            <tr class="table-dark">
                                <td>@($"{client.User.FirstName} {client.User.LastName}")</td>
                                <td>@(client.PhoneNumber ?? "N/A")</td>
                                <td>@client.Address</td>
                                <td>@client.DateOfBirth.ToString("yyyy-MM-dd")</td>
                                <td>@client.Cases.Count</td>
                                <td>
                                    <div>
                                        <a class="btn btn-danger" asp-area="Admin_Area" asp-action="DeleteClient" asp-controller="AdminHome" asp-route-id="@client.Id">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center mb-5">
                <a class="btn btn-secondary" href="@Url.Action("Index", "AdminHome")">>Back to Home</a>

            </div>



        </div>
    </div>
</section>
