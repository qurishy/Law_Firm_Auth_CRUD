@{
    ViewData["Title"] = "Home Page";
}

<!-- Masthead -->
<header class="masthead">
    <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
        <div class="d-flex justify-content-center">
            <div class="text-center">

                <h1 class="mx-auto my-0 text-uppercase">Your rights, our fight </h1>
                <h2 class="text-white-50 mx-auto mt-2 mb-5">Justice is the hammer And Law is the Anvil</h2>
                <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Get Started</a>

            </div>
        </div>
    </div>
</header>

<!-- About Section -->
<section class="about-section text-center" id="about">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8">
                <h2 class="text-white mb-4">Delayed Justice is a no Justice</h2>
                <p class="text-white-50">
                    Where law meets justice - your trusted ally in navigating the legal system to secure the fairness and resolution you deserve.
                    delivering justice through expert legal counsel.
                </p>
            </div>
        </div>
        <img class="img-fluid" src="~/images/lawfirm-1.jpg" alt="..." />
    </div>
</section>

<!-- Projects Section -->
<section class="projects-section bg-light" id="cases">
    <div class="container px-4 px-lg-5">
        <!-- Featured Project Row -->
        <div class="row gx-0 mb-4 mb-lg-5 align-items-center">
            <div class="col-xl-8 col-lg-7">
                <a class="link-black" asp-action="Attorneys"> <img class="img-fluid mb-3 mb-lg-0" src="https://filevine-marketing-production-media.s3.amazonaws.com/media/images/blogs/2024/08/evolution-of-legal-teams-1.png" alt="Our Legal Team" style="width: 100%; max-width: 600px; height: auto;" /> </a>
            </div>
            <div class="col-xl-4 col-lg-5">
                <div class="featured-text text-center text-lg-left">
                    <h4>Justice. Integrity. Excellence.</h4>
                    <p class="text-black-50 mb-0">
                        At <strong>Hartwell & Partners</strong>, we champion your rights with unwavering dedication.
                        From corporate litigation to personal injury claims, our team delivers results with precision
                        and compassion. Trusted by clients for over 20 years.
                    </p>
                </div>
            </div>
        </div>

        <!-- Project One: Corporate Law -->
        <div class="row gx-0 mb-5 mb-lg-0 justify-content-center">
            <div class="col-lg-6">
                <img class="img-fluid" src="https://www.onlinedegree.com/wp-content/uploads/2017/02/corporate_lawyer.jpg" alt="Corporate Law Cases" />
            </div>
            <div class="col-lg-6">
                <div class="bg-dark text-center h-100 project">
                    <div class="d-flex h-100">
                        <div class="project-text w-100 my-auto text-center text-lg-left">
                            <h4 class="text-white">Corporate & Business Law</h4>
                            <p class="mb-0 text-white-50">
                                We safeguard your business interests with tailored legal solutions:
                                mergers, acquisitions, contract disputes, and compliance.
                                Let us handle the complexities while you focus on growth.
                            </p>
                            <hr class="d-none d-lg-block mb-0 ms-0" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Project Two: Personal Injury -->
        <div class="row gx-0 justify-content-center">
            <div class="col-lg-6">
                <img class="img-fluid" src="https://oguz.law/wp-content/webp-express/webp-images/uploads/personal-injury-image-1.png.webp" alt="Personal Injury Advocacy" />
            </div>
            <div class="col-lg-6 order-lg-first">
                <div class="bg-dark text-center h-100 project">
                    <div class="d-flex h-100">
                        <div class="project-text w-100 my-auto text-center text-lg-right">
                            <h4 class="text-white">Personal Injury Advocacy</h4>
                            <p class="mb-0 text-white-50">
                                Injured due to negligence? We fight for your compensation.
                                Our track record includes multi-million-dollar settlements for
                                auto accidents, medical malpractice, and workplace injuries.
                            </p>
                            <hr class="d-none d-lg-block mb-0 me-0" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
